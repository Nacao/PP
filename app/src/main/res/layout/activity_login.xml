<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/top_layout" >

            <ImageView
                android:src="@drawable/aia_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/app_slogan"
                android:id="@+id/tv_slogan"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/text_view_left_padding"
                android:paddingStart="@dimen/text_view_left_padding"
                android:id="@+id/et_email"
                android:inputType="textEmailAddress"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:hint="@string/email"
                android:background="@drawable/rounded_edittext" />

            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/text_view_left_padding"
                android:paddingStart="@dimen/text_view_left_padding"
                android:id="@+id/et_password"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_edittext"
                android:layout_below="@+id/et_email" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_password"
                android:layout_alignLeft="@+id/et_password">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_stay_logged"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="@string/stay_logged" />

                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/cb_stay_logged"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:checked="true" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_layout" >

            <Button
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#117028"
                android:textStyle="bold"
                android:text="@string/button_login"
                android:id="@+id/b_login" />

            <Button
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#0f3982"
                android:textStyle="bold"
                android:text="@string/button_register_now"
                android:id="@+id/b_register" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
