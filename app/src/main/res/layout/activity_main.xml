<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redone13.pp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/aia_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/app_slogan"
            android:id="@+id/tv_slogan"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/action_menu"
        android:background="#78000000"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_icons">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b_personal_data"
                android:src="@drawable/user_filled_person"
                android:background="#00000000"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b_parking_data"
                android:src="@drawable/car_front_view"
                android:background="#00000000"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b_more_data"
                android:src="@drawable/more"
                android:background="#00000000"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_description">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="PersÃ¶nliche Daten"
                android:id="@+id/tv_personal_data"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mein Parkplatz"
                android:id="@+id/tv_parking_data"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mehr"
                android:id="@+id/tv_more"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
